{
  "name": "esika",
  "version": "1.0.0",
  "description": "Esika API Project",
  "main": "index.ts",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "cross-env NODE_ENV=production ts-node build/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "test": "cross-env NODE_ENV=test jest --coverage --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .ts",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./ormconfig.ts",
    "create-table": "npm run typeorm:cli -- migration:run",
    "drop-table": "npm run typeorm:cli -- schema:drop",
    "create-table:test": "cross-env NODE_ENV=test npm run typeorm:cli -- migration:run",
    "drop-table:test": "cross-env NODE_ENV=test npm run typeorm:cli -- schema:drop"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "firebase-admin": "^9.9.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "twilio": "^3.65.0",
    "typeorm": "^0.2.34",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^8.6.2"
  }
}